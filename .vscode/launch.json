{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            // server -> local
            "pathMappings": {
                "/usr/sbin/gosa-encrypt-passwords": "${workspaceRoot}/bin/gosa-encrypt-passwords",
                "/usr/share/gosa/": "${workspaceRoot}"
            },
            "postDebugTask": "sleep-task",
            "preLaunchTask": "install-on-tjener",
            "log": true,
        },
    ]
}
