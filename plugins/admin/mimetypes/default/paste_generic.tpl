<div class="mime-wrapper">
    <div class="row">
        <h3>{t}Generic{/t}</h3>

        <div class="col s12 xl6">
            <div class="input-field">
                <input type="text" name='cn' id="cn" value="{$cn}" title='{t}Please enter a name for the mime-type here{/t}'>
                <label for="cn">{t}Mime-type{/t}</label>
            </div>

            <div class="input-field">
                <input type="text" name='description' id="description" value="{$description}" title='{t}Please specify a description for this mime-type here{/t}'>
                <label for="description">{t}Description{/t}</label>
            </div>
        </div>
    </div>
</div>
